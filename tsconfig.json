{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "composite": true,
        "incremental": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@nger/di": [
                "packages/di/lib/index.ts"
            ],
            "@nger/di.util": [
                "packages/util/lib/index.ts"
            ],
            "@nger/di.types": [
                "packages/types/lib/index.ts"
            ],
            "@nger/di.render3": [
                "packages/render3/lib/index.ts"
            ],
            "@nger/di.reflection": [
                "packages/reflection/lib/index.ts"
            ],
            "@nger/di.compiler": [
                "packages/compiler/lib/index.ts"
            ],
            "@nger/di.change_detection": [
                "packages/change_detection/lib/index.ts"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "packages"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}